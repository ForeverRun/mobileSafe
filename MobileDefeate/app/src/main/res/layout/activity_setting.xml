<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:Tang="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        style="@style/TitleStyle"
        android:text="设置中心"/>
    <cs.com.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        Tang:mytitle="自动更新设置"
        Tang:desc_off="自动更新已关闭"
        Tang:desc_on="自动更新已开启"/>
    <cs.com.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        Tang:mytitle="电话归属地显示"
        Tang:desc_off="归属地显示已关闭"
        Tang:desc_on="归属地显示已开启"/>
    <cs.com.mobilesafe.view.SettingClickView
        android:id="@+id/siv_address_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <cs.com.mobilesafe.view.SettingClickView
        android:id="@+id/siv_address_location"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <cs.com.mobilesafe.view.SettingItemView
        android:id="@+id/siv_callsafe"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        Tang:mytitle="黑名单拦截设置"
        Tang:desc_off="黑名单拦截已关闭"
        Tang:desc_on="黑名单拦截已开启"/>
    <cs.com.mobilesafe.view.SettingItemView
        android:id="@+id/siv_applock"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        Tang:mytitle="程序锁服务设置"
        Tang:desc_off="程序锁已关闭"
        Tang:desc_on="程序所已开启"/>
    </LinearLayout>
</ScrollView>
